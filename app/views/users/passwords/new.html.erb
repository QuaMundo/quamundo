<div class="mx-auto justify-center">
  <h2 class="text-2xl font-bold">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name),
               html: { method: :post }) do |f| %>
               
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%# f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class: %Q[mt-0 block w-full px-0.5 border-0 border-b-2 border-gray-200
                  focus:ring-0 focus:border-black],
        placeholder: t('.email') %>
    </div>

    <div class="actions">
      <%= f.submit t('.reset_password'),
        class: %Q[w-full rounded bg-blue-700 my-4 py-2 text-white] %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
