<menu id="user_menu" class="">

  <% if current_user.present? %>

    <li>
      <%= link_to t('.edit_profile'),
        edit_user_path(current_user),
        class: %Q[] %>
    </li>

    <li>
      <%= link_to t('logout'),
        destroy_user_session_path,
        class: %Q[],
        method: :delete,
        data: { turbo_method: :delete } %>
    </li>

  <% else %>

    <li>
      <%= link_to t('login'),
        new_user_session_path,
        class: %Q[] %>
    </li>

  <% end %>

</menu>
